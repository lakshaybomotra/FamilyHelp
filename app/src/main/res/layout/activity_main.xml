<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/invite_container"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_up"
        android:id="@+id/openInvite"
        android:visibility="visible"
        android:background="@drawable/invite_card_button"
        app:layout_constraintBottom_toTopOf="@id/invite_container"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/invite_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        app:menu="@menu/bottom_bar_items"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:itemIconTint="@drawable/nav_icon_color"
        app:itemTextColor="@color/green_card"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>