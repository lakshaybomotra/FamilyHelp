<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_8"
    android:id="@+id/bottom_sheet_data"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_invite_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite_name"
        android:layout_marginTop="4dp"
        android:text="Friend"
        android:textColor="@color/darker_grey"
        app:layout_constraintEnd_toEndOf="@+id/img_invite_user"
        app:layout_constraintStart_toStartOf="@id/img_invite_user"
        app:layout_constraintTop_toBottomOf="@id/img_invite_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_rounded_rect"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@id/img_invite_user"
        app:layout_constraintStart_toStartOf="@id/img_invite_user"
        app:layout_constraintTop_toBottomOf="@id/invite_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inviteText"
            android:text="INVITE"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_sp"
            app:layout_constraintEnd_toEndOf="@+id/img_invite_user"
            app:layout_constraintStart_toStartOf="@id/img_invite_user"
            app:layout_constraintTop_toBottomOf="@id/img_invite_user" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>